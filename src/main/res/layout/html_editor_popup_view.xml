<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal">
<HorizontalScrollView

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_size_h1"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:visibility="gone"
            android:src="@drawable/popup_text_size" />
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_size_h2"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:padding="4dp"
            android:visibility="gone"
            android:src="@drawable/popup_text_size" />
        <ImageButton
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_size_h3"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:padding="6dp"
            android:src="@drawable/popup_text_size" />
        <ImageButton
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_size_h4"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/popup_text_size" />
        <ImageButton
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_size_h5"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/popup_text_size" />
        <ImageButton
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_size_h6"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:padding="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/popup_text_size" />
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_bold"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/popup_text_bold" />
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_italic"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/popup_text_italic" />
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_underline"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/popup_text_underline" />
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_color"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/popup_text_color" />
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_background"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/popup_text_backcolor" />
        <ImageButton
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_left"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/popup_text_float_left" />
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_center"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/popup_text_float_center" />
        <ImageButton
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_right"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/popup_text_float_right" />
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_list_bullet"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/popup_text_list_bullet" />
        <ImageButton
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/popup_btn_list_num"
            android:background="?selectableItemBackground"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/popup_text_list_number" />
    </LinearLayout>
</HorizontalScrollView>

</android.support.v7.widget.CardView>